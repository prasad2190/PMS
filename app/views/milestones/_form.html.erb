
<%= form_for([@project,@milestone]) do |f| %>
<% if @milestone.errors.present? %>
<ul>
<%@milestone.errors.full_messages.each do |message| %>
<li><%= message%></li>
<% end %>
</ul>
<% end %>
<table>
	<tr>
    <td><%= f.label name="Enter Name"%></td>
		<td><%= f.text_field :name %></td>
	</tr>
	<tr>
		<td><%= f.label name="Enter description"%></td>
		<td><%= f.text_field :description %></td>
	</tr>
	<tr>
	<td><%= f.label name="Enter start date"%></td>
	<td><%= f.date_select :start_date %></td>
	</tr>
	<tr>
	<td><%= f.label name="Enter end date"%></td>
	<td><%= f.date_select :end_date %></td>
</tr>
<tr>
		<td><%= f.label name="Enter status"%></td>
		<td><%= f.select(:status, options_for_select(["Start","Inprocess","Finished"],:selected=>@milestone.status))%></td>
</tr>
	<tr><td><%=	f.submit "Save" %><tr></td>
<% end %>